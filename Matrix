package zxcvb;
import java.util.Scanner;
public class Matrix {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		int n = scan.nextInt();
		int z[][] = new int[n][n];
		for (int i=0;i<n;i++){
			System.out.println();
			for (int j=0;j<n;j++){
				if (i==(n-j-1)){
					z[i][j]=1;
				}
				else{
					if (i+j>n-1){
						z[i][j]=2;
					}
					else{
					z[i][j]=0;
					}
					}
				System.out.print(z[i][j]+ " ");
				}
			
			}


}
}
